<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>MyApp</display-name>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>com.library.web.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>bookData</servlet-name>
        <servlet-class>com.library.web.controllers.BookData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>bookData</servlet-name>
        <url-pattern>/bookData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authorData</servlet-name>
        <servlet-class>com.library.web.controllers.AuthorData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorData</servlet-name>
        <url-pattern>/authorData</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>books</servlet-name>
    <servlet-class>com.library.web.controllers.Books</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>books</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createBook</servlet-name>
        <servlet-class>com.library.web.controllers.CreateBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createBook</servlet-name>
        <url-pattern>/createBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>authors</servlet-name>
        <servlet-class>com.library.web.controllers.Authors</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authors</servlet-name>
        <url-pattern>/authors</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createAuthor</servlet-name>
        <servlet-class>com.library.web.controllers.CreateAuthor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createAuthor</servlet-name>
        <url-pattern>/createAuthor</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteBook</servlet-name>
        <servlet-class>com.library.web.controllers.DeleteBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteBook</servlet-name>
        <url-pattern>/deleteBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateBook</servlet-name>
        <servlet-class>com.library.web.controllers.UpdateBook</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateBook</servlet-name>
        <url-pattern>/updateBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>updateAuthor</servlet-name>
        <servlet-class>com.library.web.controllers.UpdateAuthor</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateAuthor</servlet-name>
        <url-pattern>/updateAuthor</url-pattern>
    </servlet-mapping>
</web-app>
